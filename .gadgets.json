{
  "adapters": {
    "debugpy": {
      "command": [
        "/usr/bin/python3",
        "${gadgetDir}/debugpy/build/lib/debugpy/adapter"
      ],
      "configuration": {
        "python": "/usr/bin/python3",
        "subProcess": false
      },
      "name": "debugpy"
    },
    "multi-session": {
      "host": "${host}",
      "port": "${port}"
    },
    "vscode-cpptools": {
      "attach": {
        "pidProperty": "processId",
        "pidSelect": "ask"
      },
      "command": [
        "${gadgetDir}/vscode-cpptools/debugAdapters/OpenDebugAD7"
      ],
      "configuration": {
        "args": [],
        "cwd": "${workspaceRoot}",
        "environment": [],
        "type": "cppdbg"
      },
      "name": "cppdbg"
    },
    "cpptools-remote": {
      "command": [
        "${gadgetDir}/vscode-cpptools/debugAdapters/OpenDebugAD7"
      ],
      "name": "cppdbg",
      "configuration": {
        "type": "cppdbg"
      }
